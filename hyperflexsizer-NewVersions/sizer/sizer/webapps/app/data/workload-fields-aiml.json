                    }
                },
                {
                    "displayName": "",
                    "modelName": "vcpus_per_core",
                    "value": 1,
                    "type": "number",
                    "hidden": true
                },
                {
                    "displayName": "Input Source",
                    "modelName": "input_type",
                    "value": "Text Input",
                    "type": "dropdown",
                    "className": "aimlDropdown",
                    "events": {
                        "change": "WORKLOAD_FIELD_CHANGED"
                    },
                    "options": [
