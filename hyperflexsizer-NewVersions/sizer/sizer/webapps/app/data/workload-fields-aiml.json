                            "key": "Serious Development"
                        }
                    ]
                },
                {
                    "displayName": "Storage on HX cluster ?",
                    "modelName": "enablestorage",
                    "value": 0,
                    "className": "hxCluster_class",
                    "type": "checkbox",
                    "events": {
                        "change": "WORKLOAD_FIELD_CHANGED"
                    }
                },
                {
                    "displayName": "",
                    "modelName": "disk_per_ds_unit",
                    "events": {
                        "change": "WORKLOAD_FIELD_CHANGED"
                    },
                    "value": "GB",
                    "type": "dropdown",
                    "hidden": true,
                    "className": "no-label aiml_unit",
                    "options": [
                        {
                            "key": "GB",
                            "value": "GB"
                        },
                        {
                            "key": "GiB",
                            "value": "GiB"
                        },
                        {
