            {
              "label": "VDI Infrastructure VMs",
              "value": "VDI_INFRA"
            },
            {
              "label": "RDSH Workload",
              "value": "RDSH"
            },
            {
              "label": "Microsoft SQL",
              "value": "DB"
            },
            {
              "label": "Oracle",
              "value": "ORACLE"
            },
            {
              "label": "Splunk Workload",
              "value": "SPLUNK"
            },
            {
              "label": "Bulk Database Input",
              "value": "BULK"
            },
            {
              "label": "Oracle AWR File Upload",
              "value": "AWR_FILE"
            },
            {
              "label": "General Server Virtualized Environment (VSI)",
              "value": "VSI"
            },
            {
              "label": "Microsoft Exchange Server",
              "value": "EXCHANGE"
            },
            {
              "label": "HX Edge (ROBO)",
              "value": "ROBO"
            },
